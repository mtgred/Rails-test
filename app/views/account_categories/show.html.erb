<dl>
  <div><dt>Name</dt><dd><%= @account_category.name %></dd></div>
  <div>
    <dt>Color</dt>
    <dd>
      <%= @account_category.color %>
      <span class="color" style="background-color: <%= @account_category.color %>"></span>
    </dd>
  </div>
</dl>

<%= link_to 'Edit', edit_account_category_path(@account_category), :class => 'button' %>
<%= link_to 'Delete', account_category_path(@account_category), :confirm => 'Are you sure you want to delete this account category?', :method => :delete, :class => 'button' %>
