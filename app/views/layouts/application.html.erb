<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>@title</title>
  <%= stylesheet_link_tag "application"%>
  <%= javascript_include_tag "application"%>
  <link href="http://fonts.googleapis.com/css?family=PT+Sans:regular,italic,bold" rel="stylesheet" type="text/css"> 
  <link href="http://fonts.googleapis.com/css?family=PT+Sans+Narrow:regular,bold" rel="stylesheet" type="text/css"> 
  <%= csrf_meta_tags%>
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]--> 
  <!--[if lte IE 7]>
    <style type="text/css">#wrapper{height:100%;}</style>
  <![endif]-->
</head>
<body>
<div id="wrapper">
  <header>
    <div class="row">
      <div class="grid-6">
        <h5 class="logo"><%= link_to 'OpenERP', root_path %></h5>
      </div> 
      <ul class="grid-10 tar u-menu">
        <% if user_signed_in? %>
          <li><%= link_to 'Sign out', destroy_user_session_path %></li>
          <li><%= link_to 'Settings', edit_user_registration_path %></li>
          <li><%= link_to "#{current_user.first_name} #{current_user.last_name}", edit_user_registration_path %></li>
        <% else %>
          <li><%= link_to 'Login', new_user_session_path%></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </header>

  <div id="content">
    <div class="row">
      <div class="grid-3">
        <h6 class="title">Overview</h6>
        <ul class="v-menu">
          <li><%= link_to 'Dashboard', accounts_path %></li>
          <li><%= link_to 'Planning', accounts_path %></li>
          <li><%= link_to 'Invoices', accounts_path %></li>
        </ul>
        <h6 class="title">Time &amp; Expenses</h6>
        <ul class="v-menu">
          <li><%= link_to 'My Timesheets', accounts_path %></li>
          <li><%= link_to 'My Expenses', accounts_path %></li>
        </ul>
        <h6 class="title">Administration</h6>
        <ul class="v-menu">
          <li><%= link_to 'Users', accounts_path %></li>
          <li><%= link_to 'Accounts', accounts_path %></li>
        </ul>
      </div>

      <div class="grid-13">
        <% if notice %>
        <p class="success"><%= notice %></p>
        <% end %>
        <% if alert %>
        <p class="error"><%= alert %></p>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </div>

  <footer>
    <div class="row">
      <%= link_to 'Documentation', documentation_path %>
    </div>
  </footer>
</div>
</body>
</html>
