<%= form_tag destroy_selected_accounts_path, :method => :delete do %>
<ul class='toolbar h-menu'>
  <li><%= link_to 'New', new_account_path, :class => 'button' %></li>
  <li><%= submit_tag 'Delete' %></li>
</ul>

<ul class="list">
  <% @accounts.each do |a| %>
  <li>
    <section>
    <div class="select"><%= check_box_tag "account_ids[]", a.id %></div>
    <div class="title"><%= link_to a.name, a %></div>
    </section>
  </li>
  <% end %>
</ul>
<% end %>
