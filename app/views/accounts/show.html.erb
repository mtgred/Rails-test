<p id="notice"><%= notice %></p>

<dl>
  <div><dt>Name</dt><dd><%= @account.name %></dd></div>
  <div><dt>Category</dt><dd><%= link_to @account.category.name, @account.category if @account.category %></dd></div>
  <div><dt>Parent account</dt><dd><%= link_to @account.parent.name, @account.parent if @account.parent %></dd></div>
</dl>

<%= link_to 'Edit', edit_account_path(@account), :class => 'button' %>
<%= link_to 'Delete', account_path(@account), :confirm => 'Are you sure you want to delete this account?', :method => :delete, :class => 'button' %>
